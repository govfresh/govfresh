{
    "@context": "http://schema.org",
    "@type": "{{ page.schematype }}",
    "name": "{{ page.title }}",
    "description": "{{ page.description }}",
    "isAccessibleForFree": true,
    "datePublished": "{{ page.published }}",
    "url": "{{ site.url }}{{ page.url }}",
    "isbn": "{{ page.isbn }}",
    "genre": "{{ page.genre }}",
    "inLanguage": "{{ page.book-language }}",
    "numberOfPages": "{{ page.number-of-pages }}",
    "bookFormat": "{{ page.book-format }}",
    "author": [
        {
            "@type": "Person",
            "name": "{{ page.book-author }}"
        }
    ],
    "image": [
        "{{ site.url }}/assets/img/{{ page.img-path }}/{{ page.img-feat }}"
    ],
    "publisher": {
        "@type": "Organization",
        "name": "{{ page.publisher }}",
        "url": "{{ page.publisher-url }}"
    }
}